	<description>财付通支付接口</description>
	<files>
		<filename plugin="tenpay">tenpay.php</filename> 
	</files>
	<params>
		<param name="accout" type="text" default="" size="35" label="客户号：" /> 
		<param name="key" type="text" default="" size="35" label="商户密钥："  /> 
		<param name="rates" type="text" default="" size="5" label="费率：" description="可以设置百分比如：1%,也可设置固定费率" /> 
		<param name="logo" type="upload" default="" label="支付方式LOGO" description="用于LOGO图片的显示" />
		<param name="desc" type="textarea" default="" rows="5" cols="50" label="描述：" /> 
	</params>
